@model Subject

<div>
    <h4>Are you sure you want to delete this subject?</h4>
    <div>
        <h4>Subject</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Code
            </dt>
            <dd class="col-sm-10">
                @Model.Code
            </dd>
            <dt class="col-sm-2">
                Description
            </dt>
            <dd class="col-sm-10">
                @Model.Description
            </dd>
            <dt class="col-sm-2">
                Location
            </dt>
            <dd class="col-sm-10">
                @Model.Location
            </dd>
            <dt class="col-sm-2">
                Status
            </dt>
            <dd class="col-sm-10">
                @Model.Status
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>
